
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color:blue">
    <a class="navbar-brand" href="/"><button class="btn btn-secondary">Mongo Scraper</button></a>
    <a class="navbar-brand" href="/articles/viewSaved"><button class="btn btn-success" id="viewSaved">Saved Articles</button></a>
    <a class="navbar-brand"><button class="btn btn-danger" id="scrape" data-toggle="modal" data-target="#alertModal">Scrape New Articles</button></a>
</nav>

<div class="filler"></div>

{{#each articles}}
  {{#unless saved}}
    <li class="list-group-item">
      <a href="{{storyUrl}}" class="pull-right" target="_blank">
        <div class="imgBox">
          <img src="{{imgUrl}}" alt="" class="storyImg" height="150">
        </div>
      </a>
      {{#if storyUrl}}
        <a href="{{storyUrl}}" class="storyLink" target="_blank">
          <h2 class="storyHeadline">{{headline}}</h2>
        </a>
      {{else}}
        <h3 class="storyHeadline">{{headline}}</h3>
      {{/if}}
      <h5 class="storyByline">{{byLine}}</h5>
      <h6 class="storySummary">{{summary}}</h6>
      <button class="storyButton" id="saveArticle" data-id="{{_id}}">Save Article</button>
    </li>
  {{/unless}}
{{/each}}

{{!-- display scraped articles on modal --}}
<div id="alertModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body text-center">
        <h2>You have scraped <span id="numArticles"></span> new articles</h2>
      </div>
    </div>
  </div>
</div>

{{!-- display error on modal --}}
<div id="error" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <h2>There was an error processing your request.  Please try again later.</h2>
      </div>
    </div>
  </div>
</div>












  
   

